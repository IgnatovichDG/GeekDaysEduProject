@using Microsoft.AspNet.Identity
@model GeekDaysEdu.Models.ResourceModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>О курсе</h2>

<div>
    <div class="row">
        <div class="col-md-3">
            <a href="#">
                <img src=@Model.LinkToImg alt="...">
            </a>
        </div>
        <div class="col-md-5">
            <h4>@Html.DisplayFor(model => model.Name)</h4>
        </div>
    </div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Тип ресурса
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt>
            Описание
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Disciption)
        </dd>

        <dt>
            Ссылка на курс
        </dt>

        <dd>
            <a href="@Html.DisplayFor(model => model.URL)">Перейти</a>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Score)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Score)
        </dd>

    </dl>
    @if (ViewBag.Taken)
    {
        <div class="btn btn-warning btn-block">У Вас уже есть этот курс</div>
    }
    else
    {
        <a href="~/ResourceModels/TakeCourse/@Model.ResourceId" id="clicker">
            <div class="btn btn-primary btn-block">Взять курс</div></a>
    }
</div>

@section scripts
{
    <script type="text/javascript">
        $(function () {
            $('#clicker').click(function () {
                $('#clicker').removeClass().addClass('btn btn-success btn-block').text('Добавлено');
            });
        });
</script>
}
